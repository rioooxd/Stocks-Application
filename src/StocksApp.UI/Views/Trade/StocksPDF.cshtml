@model             Orders
@using StocksApp.Core.DTO;
@{
    Layout = null;
}

<link href="@("http://" + Context.Request.Host.ToString() + "/Stylesheet.css")" rel="stylesheet" />

<h1>Orders</h1>

<h4 class="text-grey mb">Sell Orders</h4>
<table class="table w-100 mt">
    <thead>
        <tr>
            <th>Date and Time</th>
            <th>Stock</th>
            <th>Order Type</th>
            <th>Quantity</th>
            <th>Price</th>
            <th>Trade Amount</th>
        </tr>
    </thead>
    <tbody>
        @foreach (SellOrderResponse order in Model.SellOrders)
        {
            <tr>
                <td style="width:18%">@order.DateAndTimeOfOrder.ToString("dd MMMM yyyy hh:mm:ss tt")</td>
                <td style="width:20%">@order.StockName (@order.StockSymbol)</td>
                <td style="width:9%">@order.Quantity</td>
                <td style="width:9%">$ @order.Price.ToString("N")</td>
                <td style="width:13%">@order.TradeAmount.ToString("N")</td>
            </tr>
        }
    </tbody>

</table>
<h4 class="text-grey mb">Buy Orders</h4>
